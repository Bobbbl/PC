<UserControl x:Class="PC.XAMLFiles.PortPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC.XAMLFiles"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:PortPresenter></local:PortPresenter>
    </UserControl.DataContext>
    <Grid Name="Container" MinHeight="80">
        <Border BorderBrush="Black" BorderThickness="3" Background="WhiteSmoke">
            <ItemsControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Border>
    </Grid>
</UserControl>
