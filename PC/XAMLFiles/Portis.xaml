<UserControl x:Name="userControl" x:Class="PC.XAMLFiles.Portis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC.XAMLFiles"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             Height="50" Width="50"  HorizontalAlignment="Left" Padding="2">

    <Grid>
        
        <Border BorderBrush="Black" BorderThickness="1" MouseLeftButtonDown="Border_MouseLeftButtonDown" Background="{Binding IndicatorColor, ElementName=userControl}" >
            <TextBlock x:Name="PortNamePresenter" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding PortName, ElementName=userControl, FallbackValue=Void}"></TextBlock>

        </Border>
    </Grid>
</UserControl>
