<UserControl x:Class="PC.XAMLFiles.ConsolePresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:ObservableCollectionToString x:Key="ObservableCollectionToString"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <local:ConsoleViewModel></local:ConsoleViewModel>
    </UserControl.DataContext>
    <Grid>
        <Border BorderBrush="Black" BorderThickness="3" MinHeight="200">
            <ScrollViewer>
                <TextBlock Text="{Binding ConsoleContent}">
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="ApplicationCommands.Cut" Header="Cut"></MenuItem>
                            <MenuItem Command="ApplicationCommands.Copy" Header="Copy"></MenuItem>
                            <MenuItem Command="{Binding ClearCommand}" Header="Clear"></MenuItem>
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                </TextBlock>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
